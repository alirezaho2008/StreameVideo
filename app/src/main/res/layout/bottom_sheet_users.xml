<!-- res/layout/bottom_sheet_users.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnUser1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="کاربر اول">

        <ImageView
            android:id="@+id/iv_user_1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/user_1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:text="@string/User1"
            app:layout_constraintStart_toEndOf="@id/iv_user_1" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnUser2"
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_user_2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/user_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="9dp"
            android:text="@string/User2"
            app:layout_constraintStart_toEndOf="@id/iv_user_2" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>